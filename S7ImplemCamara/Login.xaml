<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="S7ImplemCamara.Login">
    <ContentPage.Content>
        <StackLayout>
            <Label Text="LOGIN"
                VerticalOptions="CenterAndExpand" 
                HorizontalOptions="CenterAndExpand" />

            <Entry x:Name="txtUsuario" Placeholder="Ingrese el usuario"/>
            <Entry x:Name="txtContrasena" Placeholder="Ingrese la cotraseña" IsPassword="True"/>

            <Button x:Name="btnRegistro" Text="Registro" BackgroundColor="Bisque" TextColor="Green" Clicked="BtnRegistro_Clicked"/>
            <Button x:Name="btnLogin" Text="Iniciar Sesión" BackgroundColor="DarkCyan" TextColor="Green" Clicked="btnLogin_Clicked"/>
            

        </StackLayout>
    </ContentPage.Content>
</ContentPage>